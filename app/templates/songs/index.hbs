{{buttons/button-success 
    submit=(action 'newSong')
    classes='btn-new'
    label='New'}}

<div class="table-responsive">
    <table id="grid-songs" class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Album</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each model as |song|}}
                <tr>
                    <td class="item-song-{{song.id}}-id">{{song.id}}</td>
                    <td class="item-song-{{song.id}}-title">{{song.songTitle}}</td>
                    <td class="item-song-{{song.id}}-album">{{song.album.albumName}}</td>
                    <td class="text-right">
                        <button {{action 'editSong' song.id}} type="button" class="item-song-{{song.id}}-edit btn btn-link btn-custom">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button {{action 'deleteSong' song.id}} type="button" class="item-song-{{song.id}}-delete btn btn-link btn-custom">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>