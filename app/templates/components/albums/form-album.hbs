<form role="form" class="text-left">
	<div class="form-group"> 
		<label class="control-label" for="form-album-name">Name</label>                 
		{{input type="text" class="form-control" id="form-album-name" placeholder="Enter name" value=(mut model.albumName)}}
	</div>
	<div class="form-group"> 
		<label class="control-label" for="form-album-artistid">Artist</label>                 
		<select id="form-album-artistid" class="form-control" onchange={{action 'onSelectArtist' value="target.value"}}>
		  <option value="0">Selecione</option>
		  {{#each artists as |artist|}}
		    <option value={{artist.id}}
	    		selected={{eq artist.id model.artist.id}}>
	    		{{artist.artistName}}
    		</option>
		  {{/each}}
		</select>
	</div>
	<div class="form-group"> 
		<label class="control-label" for="form-album-imageurl">Image URL</label>                 
		{{input type="text" class="form-control" id="form-album-imageurl" placeholder="Enter image URL" value=(mut model.imageUrl)}}
	</div>
	<div class="row">
		<div class="col-md-6">
			<button {{action 'back'}} type="submit" class="btn-back btn btn-danger">Back</button>
		</div>
		<div class="col-md-6 text-right">
			<button {{action 'submit'}} type="submit" class="btn-submit btn btn-info">Submit</button>
		</div>
	</div>
</form>