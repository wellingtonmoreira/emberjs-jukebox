<form role="form" class="text-left"> 
	<div class="form-group"> 
		<label class="control-label" for="form-album-name">Name</label>                 
		<input type="text" class="form-control" id="form-album-name" placeholder="Enter name"> 
	</div>
	<div class="form-group"> 
		<label class="control-label" for="form-album-artistid">Artist Id</label>                 
		<input type="text" class="form-control" id="form-album-artistid" placeholder="Enter artist id"> 
	</div>
	<div class="form-group"> 
		<label class="control-label" for="form-album-imageurl">Image URL</label>                 
		<input type="text" class="form-control" id="form-album-imageurl" placeholder="Enter image URL"> 
	</div>
	{{form/form-action 
		back=(action 'back')
		submit=(action 'submit')}}
</form>