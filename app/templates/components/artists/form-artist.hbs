<form role="form" class="text-left"> 
	<div class="form-group"> 
		<label class="control-label" for="form-artist-name">Name</label>                 
		<input type="text" class="form-control" id="form-artist-name" placeholder="Enter name"> 
	</div>
	<div class="form-group"> 
		<label class="control-label" for="form-artist-imageurl">Image URL</label>                 
		<input type="text" class="form-control" id="form-artist-imageurl" placeholder="Enter image URL"> 
	</div>
	<div class="row">
		<div class="col-md-6">
			<button {{action 'back'}} type="submit" class="btn btn-danger">Back</button>
		</div>
		<div class="col-md-6 text-right">
			<button {{action 'submit'}} type="submit" class="btn btn-info">Submit</button>
		</div>
	</div>
</form>