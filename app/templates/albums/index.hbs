{{buttons/button-success 
    submit=(action 'newAlbum')
    classes='btn-new'
    label='New'}}

<div class="table-responsive">
    <table id="grid-albums" class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Image URL</th>
                <th>Artist</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each model as |album|}}
                <tr>
                    <td class="item-album-{{album.id}}-id">{{album.id}}</td>
                    <td class="item-album-{{album.id}}-name">{{album.albumName}}</td>
                    <td class="item-album-{{album.id}}-image">{{album.imageUrl}}</td>
                    <td class="item-album-{{album.id}}-artist">{{album.artist.artistName}}</td>
                    <td class="text-right">
                        <button {{action 'editAlbum' album.id}} type="button" class="item-album-{{album.id}}-edit btn btn-link btn-custom">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button {{action 'deleteAlbum' album.id}} type="button" class="item-album-{{album.id}}-delete btn btn-link btn-custom">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>