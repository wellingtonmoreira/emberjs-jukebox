{{buttons/button-success 
    submit=(action 'newArtist')
    classes='btn-new'
    label='New'}}

<div class="table-responsive">
    <table id="grid-artists" class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Image URL</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each model as |artist|}}
                <tr>
                    <td class="item-artist-{{artist.id}}-id">{{artist.id}}</td>
                    <td class="item-artist-{{artist.id}}-name">{{artist.artistName}}</td>
                    <td class="item-artist-{{artist.id}}-image">{{artist.imageUrl}}</td>
                    <td class="text-right">
                        <button {{action 'editArtist' artist.id}} type="button" class="item-artist-{{artist.id}}-edit btn btn-link btn-custom">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>
                        <button {{action 'deleteArtist' artist.id}} type="button" class="item-artist-{{artist.id}}-delete btn btn-link btn-custom">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>